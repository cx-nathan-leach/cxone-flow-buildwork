{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Scan Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "cx_scan_agent.py",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "DEBUG",
                "CONFIG_YAML_PATH" : "config.agent.yaml"
            },
        },
        {
            "name": "Python: Workflow Agents",
            "type": "debugpy",
            "request": "launch",
            "program": "workflow_agent.py",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "DEBUG"
            },
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "LOG_LEVEL": "DEBUG"
            }
        },
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1",
                "LOG_LEVEL": "DEBUG",
                "ENABLE_DUMP": "1"
            },
            "args": [
                "run",
                "-h",
                "0.0.0.0",
                "-p",
                "8000",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": false
        },
        {
            "name": "Flask Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${file}",
                "FLASK_DEBUG": "1",
                "LOG_LEVEL": "DEBUG",
                "ENABLE_DUMP": "1"
            },
            "args": [
                "run",
                "-h",
                "0.0.0.0",
                "-p",
                "4000",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": false
        }
    ]
}